<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".player.ui.PlayerFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backArrowImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_4"
                android:contentDescription="@string/to_previous_screen"
                android:padding="@dimen/padding_12"
                android:src="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/upperLeftBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/upperRightBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <ImageView
                android:id="@+id/albumCoverImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_26"
                android:contentDescription="@string/album_cover"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/upperRightBorder"
                app:layout_constraintStart_toStartOf="@id/upperLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/backArrowImage" />

            <TextView
                android:id="@+id/trackNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_medium"
                android:maxLines="1"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_22"
                app:layout_constraintEnd_toEndOf="@id/upperRightBorder"
                app:layout_constraintStart_toStartOf="@id/upperLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/albumCoverImage"
                tools:text="Yesterday (Remastered 2009)" />

            <TextView
                android:id="@+id/artistNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_medium"
                android:maxLines="1"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toEndOf="@id/upperRightBorder"
                app:layout_constraintStart_toStartOf="@id/upperLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/trackNameText"
                tools:text="The Beatles" />

            <ImageButton
                android:id="@+id/addToPlaylistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/button_add_to_playlist"
                android:src="@drawable/button_add_to_playlist"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintEnd_toStartOf="@+id/playButton"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/upperLeftBorder"
                app:layout_constraintTop_toTopOf="@id/playButton" />

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:contentDescription="@string/button_play"
                android:src="@drawable/button_play"
                app:layout_constraintEnd_toStartOf="@+id/likeButton"
                app:layout_constraintStart_toEndOf="@id/addToPlaylistButton"
                app:layout_constraintTop_toBottomOf="@id/artistNameText" />

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/button_like"
                android:src="@drawable/button_like"
                app:layout_constraintBottom_toBottomOf="@id/playButton"
                app:layout_constraintEnd_toEndOf="@id/upperRightBorder"
                app:layout_constraintStart_toEndOf="@id/playButton"
                app:layout_constraintTop_toTopOf="@id/playButton" />

            <TextView
                android:id="@+id/playingTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toEndOf="@id/upperRightBorder"
                app:layout_constraintStart_toStartOf="@id/upperLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/playButton"
                tools:text="00:30" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/lowerLeftBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/lowerRightBorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp" />

            <TextView
                android:id="@+id/durationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/duration"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintStart_toStartOf="@id/lowerLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/playingTimeText" />

            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintBottom_toBottomOf="@id/durationLabel"
                app:layout_constraintEnd_toEndOf="@id/lowerRightBorder"
                tools:text="05:35" />

            <TextView
                android:id="@+id/albumLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/album"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintStart_toStartOf="@id/lowerLeftBorder"
                app:layout_constraintTag="album"
                app:layout_constraintTop_toBottomOf="@id/durationLabel"
                app:layout_goneMarginStart="0dp" />

            <TextView
                android:id="@+id/albumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintBottom_toBottomOf="@id/albumLabel"
                app:layout_constraintEnd_toEndOf="@id/lowerRightBorder"
                app:layout_constraintTag="album"
                app:layout_goneMarginStart="0dp"
                tools:text="Yesterday (Remastered 2009)" />

            <TextView
                android:id="@+id/yearLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/year"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintStart_toStartOf="@id/lowerLeftBorder"
                app:layout_constraintTag="year"
                app:layout_constraintTop_toBottomOf="@id/albumLabel" />

            <TextView
                android:id="@+id/yearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintBottom_toBottomOf="@id/yearLabel"
                app:layout_constraintEnd_toEndOf="@id/lowerRightBorder"
                app:layout_constraintTag="year"
                tools:text="1965" />

            <TextView
                android:id="@+id/genreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/genre"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintStart_toStartOf="@id/lowerLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/yearLabel" />

            <TextView
                android:id="@+id/genreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintBottom_toBottomOf="@id/genreLabel"
                app:layout_constraintEnd_toEndOf="@id/lowerRightBorder"
                tools:text="Rock" />

            <TextView
                android:id="@+id/countryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/ys_display_regular"
                android:text="@string/country"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintStart_toStartOf="@id/lowerLeftBorder"
                app:layout_constraintTop_toBottomOf="@id/genreLabel" />

            <TextView
                android:id="@+id/countryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="@dimen/text_size_13"
                app:layout_constraintBottom_toBottomOf="@id/countryLabel"
                app:layout_constraintEnd_toEndOf="@id/lowerRightBorder"
                tools:text="@string/united_kingdom" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/albumGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_tags="album" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/yearGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_tags="year" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/darkScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:background="@color/dark_grey"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/uprounded_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="505dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:src="@drawable/grey_hole" />

        <TextView
            style="@style/ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            tools:text="Добавить в плейлист" />

        <Button
            android:id="@+id/newPlaylist"
            style="@style/SmallButton2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_28"
            android:text="@string/new_playlist" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/track_item"
            tools:visibility="visible" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>