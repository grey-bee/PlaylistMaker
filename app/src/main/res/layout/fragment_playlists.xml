<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medialibrary.ui.PlaylistsFragment">

    <LinearLayout
        android:id="@+id/noPlaylistsPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_24"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/clearHistoryButton"
            style="@style/SmallButton2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_small"
            android:text="@string/new_playlist" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_49"
            android:contentDescription="@string/nothing_found"
            android:src="@drawable/ic_nothing_found" />

        <TextView
            style="@style/ErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:text="@string/didnt_make_any_playlist" />
    </LinearLayout>
</FrameLayout>