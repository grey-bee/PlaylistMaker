<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_horizontal"
    android:paddingTop="@dimen/padding_4"
    android:paddingBottom="@dimen/padding_bottom">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/app_name"
        android:titleTextColor="?attr/colorOnPrimary" />

    <Button
        android:id="@+id/searchButton"
        style="@style/mainButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/ic_search"/>

    <Button
        android:id="@+id/mediaButton"
        style="@style/mainButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/height_divider"
        android:layout_weight="1"
        android:text="@string/media_library"
        app:icon="@drawable/ic_media" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/mainButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginVertical="@dimen/height_divider"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings" />

</LinearLayout>
