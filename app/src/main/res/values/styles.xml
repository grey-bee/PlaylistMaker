<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_26</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SmallButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnSurface</item>
        <item name="cornerRadius">@dimen/corner_radius56</item>
        <item name="android:paddingVertical">@dimen/padding_10</item>
        <item name="android:layout_gravity">center</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SmallButton2" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">?attr/colorOnSurface</item>
        <item name="cornerRadius">@dimen/corner_radius54</item>
        <item name="android:paddingVertical">@dimen/padding_6</item>
        <item name="android:layout_gravity">center</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="settingsLabel">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingVertical">@dimen/padding_21</item>
        <item name="android:drawableTint">@color/settings_icon_tint</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
    </style>

    <style name="ErrorText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>