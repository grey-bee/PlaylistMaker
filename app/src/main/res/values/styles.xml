<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/dark_grey</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsElement">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:drawableTint">@color/settings_icon_tint</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
    </style>
</resources>